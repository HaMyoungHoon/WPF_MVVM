<Page x:Class="WPF_MVVM.Views.Home.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MVVM.Views.Home"
      mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <Button Content="Async Test" Command="{Binding AsyncTestCommand}" />
                    <TextBox Text="{Binding AsyncTestString}" TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <Button Content="Test" Command="{Binding TestCommand}" />
                    <TextBox Text="{Binding TestString}" TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
